<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "教师点评网", root_path, id: "logo" %>
      <nav>

        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help",    '#' %></li>
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>

          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>

          <!-- Button to trigger modal AddTeacher-->
        <% if signed_in? %>
          <a href="#AddTeacher" class="btn btn-small btn-inverse pull-right" data-toggle="modal">添加</a>

          <form class="navbar-search pull-right">
            <input type="text" class="search-query" placeholder="找老师...">
          </form>
        <% end %>

      </nav>
    </div>
  </div>
</header>

<!-- Modal -->
<div class="modal hide fade" id="AddTeacher">
            
  <div class="modal-header">
    <a href="#" class="close" data-dismiss="modal">&times;</a>
    <h3>添加教师</h3>
  </div>
            
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
            
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal">关闭</button>
    <button class="btn btn-primary">添加</button>
  </div>
</div>